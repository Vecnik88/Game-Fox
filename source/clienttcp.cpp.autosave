#include "include/clienttcp.h"

ClientTCP::ClientTCP(const QString &ipDestination,
                     const size_t  &portDestination)
{
    tcpSocket = new QTcpSocket;
    tcpSocket->connectToHost(ipDestination, portDestination);
    
    connect(tcpSocket, SIGNAL(readyRead()), SLOT(readyRead()));
    connect(tcpSocket, SIGNAL(connected()), SLOT(connected()));
}

ClientTCP::~ClientTCP()
{
    delete tcpSocket;
}